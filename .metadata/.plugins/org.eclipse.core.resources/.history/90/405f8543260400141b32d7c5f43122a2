
public class ArrayHelper {

	public static int getMin(int[] array){
		
		int min = Integer.MAX_VALUE;
		
		for(int i = 0; i < array.length; i++){
			if(array[i] < min) min = array[i];
		}
		
		return min;
	}
	
	public static int getMax(int[] array){
		
		int max = 0;
		
		for(int i = 0; i < array.length; i++){
			if(array[i] > max) max = array[i];
		}
		
		return max;
	}
	
}
