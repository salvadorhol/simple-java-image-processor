
public class Threshold {
	
	public static int[][] optimal(int[][] image){
		
		int[][] t_optimal = null;
		int[][] result = null;
		
		
		
		
		return t_optimal;
	}
	
	private static int[][] binarize(int[][] image, int t){
		
		int[][] binarized = null;
		
		for(int i = 0; i < image.length; i++){
			for(int j = 0; j < image[i].length; j++){
				if (image[i][j] > t){
					image[i][j] = 255;
				} else {
					image[i][j] = 0;
				}
			}
		}
		
	}
}
